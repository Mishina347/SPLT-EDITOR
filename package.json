{
	"name": "splt-editor",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"tauri:dev": "VITE_TAURI_PLATFORM=${VITE_TAURI_PLATFORM:-desktop} TAURI_PLATFORM=${TAURI_PLATFORM:-desktop} tauri dev",
		"tauri:build": "VITE_TAURI_PLATFORM=${VITE_TAURI_PLATFORM:-desktop} TAURI_PLATFORM=${TAURI_PLATFORM:-desktop} tauri build",
		"tauri:dev:linux": "cross-env VITE_TAURI_PLATFORM=linux TAURI_PLATFORM=linux tauri dev",
		"tauri:build:linux": "cross-env VITE_TAURI_PLATFORM=linux TAURI_PLATFORM=linux tauri build",
		"tauri:dev:macos": "cross-env VITE_TAURI_PLATFORM=macos TAURI_PLATFORM=macos tauri dev",
		"tauri:build:macos": "cross-env VITE_TAURI_PLATFORM=macos TAURI_PLATFORM=macos tauri build",
		"tauri:dev:windows": "cross-env VITE_TAURI_PLATFORM=windows TAURI_PLATFORM=windows tauri dev",
		"tauri:build:windows": "cross-env VITE_TAURI_PLATFORM=windows TAURI_PLATFORM=windows tauri build",
		"postinstall": "yarn add -D cross-env || npm install -D cross-env || echo 'cross-env installation failed, using fallback'",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
		"lint:prettier": "prettier --check . && echo 'Prettier check passed'",
		"lint:prettier:fix": "prettier --write .",
		"type-check": "tsc --noEmit",
		"pre-commit": "lint-staged",
		"prepare": "husky",
		"convert": "node scripts/convertFontToBase64.js"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.4.6",
		"@tauri-apps/plugin-dialog": "^2.3.2",
		"diff": "^8.0.2",
		"diff-match-patch": "^1.0.5",
		"diff2html": "^3.4.52",
		"jspdf": "^3.0.1",
		"jspdf-autotable": "^5.0.2",
		"jspdf-font": "^1.0.7",
		"monaco-editor": "^0.52.2",
		"pdf-lib": "^1.17.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@pdf-lib/fontkit": "^1.1.1",
		"@tauri-apps/api": "^2.7.0",
		"@tauri-apps/cli": "^2.0.0-rc.18",
		"@tauri-apps/plugin-fs": "^2.4.1",
		"@testing-library/jest-dom": "^6.7.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/diff-match-patch": "^1.0.36",
		"@types/file-saver": "^2.0.7",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.2.1",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"@vitejs/plugin-react": "^4.2.1",
		"docx": "^9.5.1",
		"eslint": "^8.57.0",
		"eslint-plugin-react": "^7.34.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"file-saver": "^2.0.5",
		"husky": "^9.1.7",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^30.0.5",
		"jest-environment-jsdom": "^30.0.5",
		"jest-transform-stub": "^2.0.0",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"typescript": "^5.1.6",
		"vite": "^5.0.0",
		"vite-plugin-pwa": "^1.0.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write"
		],
		"*.{json,md,css,scss}": [
			"prettier --write"
		],
		"src/**/*.{js,jsx,ts,tsx}": [
			"npm run test:ci -- --findRelatedTests --passWithNoTests"
		]
	}
}
