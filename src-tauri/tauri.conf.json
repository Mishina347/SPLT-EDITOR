{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "SPLT EDITOR",
	"version": "0.1.0",
	"identifier": "splt.dev",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build"
	},
	"app": {
		"windows": [
			{
				"title": "SPLT EDITOR",
				"width": 800,
				"height": 600,
				"resizable": true,
				"fullscreen": true,
				"closeRequested": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [			
			"./icons/icon-32x32.png",
			"./icons/icon-128x128.png",
			"./icons/icon.ico",
			"./icons/icon.icns"
		]
	}
}
